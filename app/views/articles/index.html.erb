<p>
<%= link_to "Create New article", new_article_path %>
</p>
<table>
    <tr>
        <th>Title</th>
        <th>description</th>
        <th></th>
    </tr>
    
    <% @articles.each do |article| %>
    <tr>
         <td><%= article.title %></td>
         <td><%= article.description %></td>
         <td><%= link_to 'Edit', edit_article_path(article) %></td>
