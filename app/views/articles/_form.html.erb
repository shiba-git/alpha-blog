<% if @article.errors.any? %>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>

    <P>
        <%= f.label :title %><br/>
        <%= f.text_field :title %>
    </p>
    <P>
        <%= f.label :description %><br/>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>
    
<% end %>

<%= link_to "Back", articles_path %>